<footer class="foot-main">
  <div class="footer-sec1">
    {%- if section.blocks.size == 0 -%}
      <div>
        <p>Test</p>
        <p>Test</p>
        <p>Test</p>
        <p>Test</p>
      </div>
    {% else %}
      {% for block in section.blocks %}
        <div>
          <li>
            <a href="{{ block.settings.link }}">{{ block.settings.text | escape }}</a>
          </li>
        </div>
      {% endfor %}


    {% endif %}
  </div>
</footer>

{% schema %}
  {
    "name": "Footer",
    "settings": [],
    "blocks": [
      {
        "name": "footer",
        "type": "link",
        "limit": 6,
        "settings": [
          {
            "type": "text",
            "id": "text",
            "label": "Text",
            "default": "Text"
          },
          {
            "type": "url",
            "id": "link",
            "label": "Link",
          }
        ]
      }
    ]
  }
{% endschema %}