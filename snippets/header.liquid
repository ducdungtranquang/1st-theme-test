<header class="header-nav">
  <div>
    <a href="">
      <img
        loading="lazy"
        width="80"
        height="50"
        src="{{'https://tailwindui.com/img/logos/mark.svg?color=indigo&shade=600'}}"
        alt=""
      >
    </a>
  </div>
  <div class="middle-nav-link">
    {% for link in linklists['main-menu'].links %}
      <li>{{ link.title | link_to: link.url }}</li>
    {% endfor %}
  </div>
  <div class="right-nav-item">
    <form action="/search">
      <input type="text" class="search-nav" placeholder="Search" type="search">
    </form>
    <a href="">
      <img
        loading="lazy"
        width="40"
        height="40"
        src="{{'https://tailwindui.com/img/logos/mark.svg?color=indigo&shade=600'}}"
        alt=""
      >
    </a>
  </div>
</header>

<style>
  /* Header */
  .header-nav {
    display: flex;
    justify-content: space-between;
    margin: 0;
    padding: 0 30px 0 30px;
  }

  .middle-nav-link {
    display: flex;
    font-size: 17px;
    font-weight: bold;
  }

  .middle-nav-link li {
    padding: 10px;
    list-style-type: none;
  }

  .middle-nav-link li:hover {
    cursor: pointer;
    text-decoration: underline;
  }

  .middle-nav-link a {
    color: inherit;
    text-decoration: none;
  }

  .right-nav-item {
    display: flex;
    align-items: center;
  }

  .search-nav {
    padding: 10px;
    margin-top: 10px;
    border-radius: 10px;
    border: none;
    background: rgb(221, 217, 217);
  }
</style>
